{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@constants/*": ["src/constants/*"],
      "@router/*": ["src/router/*"],
      "@screens/*": ["src/screens/*"],
      "@services/*": ["src/services/*"],
      "@store/*": ["src/store/*"],
      "@styles/*": ["src/styles/*"],
      "@models/*": ["src/models/*"],
      "@utils/*": ["src/utils/*"],
      "@src/*": ["src/*"]
    },
    "types": ["node"]
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js"]
}
